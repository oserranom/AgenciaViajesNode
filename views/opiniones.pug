extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center= pagina 

        blockquote.text-center Lee opiniones de nuestros clientes
        include ./layout/bloque_opiniones

        .row

            .col-md-12
                h2.d-block.w-100.text-center Añade una opinión

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/opiniones" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre" 
                            class="form-control", value= nombre)
                        .form-group 
                            label(for="email") Email 
                            input#email(type="email", placeholder="Tu email", name="email" 
                            class="form-control", value= email)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(type="text", placeholder="Escribe un mensaje", name="mensaje" 
                            class="form-control", rows="3")= mensaje

                        input.btn.btn-success.btn-block(type="submit")

            